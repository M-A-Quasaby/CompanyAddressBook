@model IEnumerator<Company>

@{
    ViewData["Title"] = "Company Page";
}

<h1>All Companies</h1>

<a asp-action="Create" class="btn btn-primary">Create New Company</a>

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">@Html.DisplayFor(c=>c.Id)</th>
            <th scope="col">@Html.DisplayFor(c=>c.Name)</th>
            <th scope="col">Update</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td><a asp-action="Update" class="btn btn-outline-warning" asp-route-id="@item.Id">Update</a></td>
                <td><a asp-action="Delete" class="btn btn-outline-danger" asp-route-id="@item.Id">Delete</a></td>
            </tr>
        }
       
        
    </tbody>
</table>

